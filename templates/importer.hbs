<div class="dh-importer-layout">
    <div class="dh-importer-wrapper standard-form">

        {{!-- Coluna da Esquerda: Input --}}
        <div class="dh-column dh-importer-input-col">
            <p class="notes dh-notes">Paste the statblock text below.</p>
            <textarea name="statblockText" placeholder="MASTER ASSASSIN&#10;Tier 2 Leader&#10;A seasoned killer...&#10;Motives & Tactics: Ambush...&#10;Difficulty: 14 | HP: 5&#10;FEATURES&#10;Horde (1d6) - Passive: ..."></textarea>
        </div>

        {{!-- Coluna da Direita: Validação --}}
        <div class="dh-column dh-importer-preview-col">
            <p class="notes dh-notes">Validation Preview</p>
            <div class="dh-preview-box" id="dh-importer-preview">
                <p class="dh-preview-placeholder">Click "Validate" to see identified fields here...</p>
            </div>
        </div>

    </div>

    {{!-- Rodapé com Ações --}}
    <div class="dh-importer-actions">
        {{!-- Botões de Config e Instruções --}}
        <div class="dh-actions-left">
            <button type="button" data-action="config" title="Configure Compendiums">
                <i class="fas fa-cog"></i> Config
            </button>
            <button type="button" data-action="instructions" title="Open Instructions">
                <i class="fas fa-book"></i> Instructions
            </button>
        </div>

        {{!-- +Features Toggle (only visible for adversary/environment modes) --}}
        <div class="dh-plus-features-container">
            <button type="button" data-action="plusFeatures" class="dh-plus-features-btn {{#if plusFeaturesEnabled}}active{{/if}}" title="Also create features as separate items">
                <i class="fas fa-puzzle-piece"></i> +Features
            </button>
            <button type="button" data-action="plusFeaturesHelp" class="dh-plus-features-help" title="Help about +Features">
                <i class="fas fa-question"></i>
            </button>
        </div>

        {{!-- +Code Generator Toggle (only visible for weapon/armor modes) --}}
        <div class="dh-code-generator-container">
            <button type="button" data-action="codeGenerator" class="dh-code-generator-btn {{#if codeGeneratorEnabled}}active{{/if}}" title="Generate feature code after import">
                <i class="fas fa-code"></i> +Code
            </button>
            <button type="button" data-action="codeGeneratorHelp" class="dh-code-generator-help" title="Help about Code Generator">
                <i class="fas fa-question"></i>
            </button>
        </div>

        <label class="dh-mode-select">
            <span>Mode:</span>
            <select name="importMode">
                <option value="adversary">Adversary</option>
                <option value="environment">Environment</option>
                <option value="feature">Feature</option>
                <option value="domainCard">Domain Card</option>
                <option value="loot">Loot</option>
                <option value="consumable">Consumable</option>
                <option value="weapon">Weapon</option>
                <option value="armor">Armor</option>
            </select>
        </label>

        <button type="button" data-action="validate">
            <i class="fas fa-search"></i> Validate
        </button>

        <button type="button" data-action="parse" class="save-button">
            <i class="fas fa-file-import"></i> Create
        </button>
    </div>
</div>