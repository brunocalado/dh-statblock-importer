<div class="standard-form">
    {{!-- Navega√ß√£o por Abas --}}
    <nav class="dh-config-nav">
        <button type="button" class="dh-config-tab-btn active" data-action="tab" data-target="features">
            <i class="fas fa-star"></i> Features
        </button>
        <button type="button" class="dh-config-tab-btn" data-action="tab" data-target="actors">
            <i class="fas fa-users"></i> Actors
        </button>
        <button type="button" class="dh-config-tab-btn" data-action="tab" data-target="general">
            <i class="fas fa-sliders-h"></i> General
        </button>
    </nav>
    
    {{!-- Aba: Features --}}
    <div class="dh-config-tab-content active" data-tab="features">
        <p class="notes" style="font-size: 0.9em; margin-bottom: 5px;"><strong>Item Compendiums:</strong> Searched for matching Features/Abilities.</p>
        <div class="form-group-stacked dh-config-list">
            {{#each featureCompendiums}}
            <label class="checkbox dh-config-item">
                <input type="checkbox" name="featureCompendiums" value="{{this.id}}" {{checked this.selected}} style="margin-right: 8px;">
                <span style="flex: 1;">
                    {{this.title}} 
                    <span style="color:var(--color-text-light-5); font-size: 0.85em; display: block;">{{this.id}}</span>
                </span>
            </label>
            {{/each}}
        </div>
    </div>

    {{!-- Aba: Actors --}}
    <div class="dh-config-tab-content" data-tab="actors">
        <p class="notes" style="font-size: 0.9em; margin-bottom: 5px;"><strong>Actor Compendiums:</strong> Searched for Potential Adversaries in Environments.</p>
        <div class="form-group-stacked dh-config-list">
            {{#each actorCompendiums}}
            <label class="checkbox dh-config-item">
                <input type="checkbox" name="actorCompendiums" value="{{this.id}}" {{checked this.selected}} style="margin-right: 8px;">
                <span style="flex: 1;">
                    {{this.title}}
                    <span style="color:var(--color-text-light-5); font-size: 0.85em; display: block;">{{this.id}}</span>
                </span>
            </label>
            {{/each}}
        </div>
    </div>

    {{!-- Aba: General --}}
    <div class="dh-config-tab-content" data-tab="general">
        <p class="notes" style="font-size: 0.9em; margin-bottom: 10px;"><strong>General Settings:</strong> Configure import behavior.</p>

        <div class="form-group">
            <label for="adversaryFolderName">Adversary Folder Name</label>
            <input type="text" name="adversaryFolderName" value="{{adversaryFolderName}}" placeholder="üíÄ Imported Adversaries">
        </div>

        <div class="form-group">
            <label for="environmentFolderName">Environment Folder Name</label>
            <input type="text" name="environmentFolderName" value="{{environmentFolderName}}" placeholder="üè∞ Imported Environments">
        </div>

        <div class="form-group">
            <label for="lootFolderName">Loot Folder Name</label>
            <input type="text" name="lootFolderName" value="{{lootFolderName}}" placeholder="üëë Imported Loot">
        </div>

        <div class="form-group">
            <label for="consumableFolderName">Consumable Folder Name</label>
            <input type="text" name="consumableFolderName" value="{{consumableFolderName}}" placeholder="üß™ Imported Consumables">
        </div>

        <div class="form-group">
            <label for="weaponFolderName">Weapon Folder Name</label>
            <input type="text" name="weaponFolderName" value="{{weaponFolderName}}" placeholder="‚öîÔ∏è Imported Weapons">
        </div>

        <div class="form-group">
            <label for="armorFolderName">Armor Folder Name</label>
            <input type="text" name="armorFolderName" value="{{armorFolderName}}" placeholder="üõ°Ô∏è Imported Armors">
        </div>

        <div class="form-group">
            <label for="featureFolderName">Feature Folder Name</label>
            <input type="text" name="featureFolderName" value="{{featureFolderName}}" placeholder="‚ú® Imported Features">
        </div>

        <hr style="margin: 10px 0; border-color: var(--color-border-light-2);">

        <div class="form-group">
            <label for="separatorMode">Bulk Import Separator</label>
            <select name="separatorMode" style="width: 100%;">
                <option value="blankLine" {{#if (eq separatorMode "blankLine")}}selected{{/if}}>Blank Line (default)</option>
                <option value="separator" {{#if (eq separatorMode "separator")}}selected{{/if}}>=== Separator</option>
            </select>
            <p class="hint" style="margin-top: 4px; font-size: 0.85em;">How to separate multiple entries when importing in bulk.</p>
        </div>

        <div class="form-group dh-debug-row">
            <label class="checkbox dh-debug-checkbox">
                <input type="checkbox" name="debugMode" {{checked debugMode}}>
                <span>Debug Mode</span>
            </label>
            <span class="hint" style="margin: 0; flex: 1;">When enabled, logs details to console (F12).</span>
        </div>
    </div>

    <div class="form-footer">
        <button type="submit" class="save-button">
            <i class="fas fa-save"></i> Save Settings
        </button>
    </div>
</div>