<div class="standard-form">
    <p class="notes">Configure which compendiums are searched during import.</p>

    {{!-- Navegação por Abas --}}
    <nav class="dh-config-nav">
        <button type="button" class="dh-config-tab-btn active" data-action="tab" data-target="features">
            <i class="fas fa-star"></i> Features
        </button>
        <button type="button" class="dh-config-tab-btn" data-action="tab" data-target="actors">
            <i class="fas fa-users"></i> Actors
        </button>
    </nav>
    
    {{!-- Aba: Features --}}
    <div class="dh-config-tab-content active" data-tab="features">
        <p class="notes" style="font-size: 0.9em; margin-bottom: 5px;"><strong>Item Compendiums:</strong> Searched for matching Features/Abilities.</p>
        <div class="form-group-stacked dh-config-list">
            {{#each featureCompendiums}}
            <label class="checkbox dh-config-item">
                <input type="checkbox" name="featureCompendiums" value="{{this.id}}" {{checked this.selected}} style="margin-right: 8px;">
                <span style="flex: 1;">
                    {{this.title}} 
                    <span style="color:var(--color-text-light-5); font-size: 0.85em; display: block;">{{this.id}}</span>
                </span>
            </label>
            {{/each}}
        </div>
    </div>

    {{!-- Aba: Actors --}}
    <div class="dh-config-tab-content" data-tab="actors">
        <p class="notes" style="font-size: 0.9em; margin-bottom: 5px;"><strong>Actor Compendiums:</strong> Searched for Potential Adversaries in Environments.</p>
        <div class="form-group-stacked dh-config-list">
            {{#each actorCompendiums}}
            <label class="checkbox dh-config-item">
                <input type="checkbox" name="actorCompendiums" value="{{this.id}}" {{checked this.selected}} style="margin-right: 8px;">
                <span style="flex: 1;">
                    {{this.title}} 
                    <span style="color:var(--color-text-light-5); font-size: 0.85em; display: block;">{{this.id}}</span>
                </span>
            </label>
            {{/each}}
        </div>
    </div>

    <div class="form-footer">
        <button type="submit" class="save-button">
            <i class="fas fa-save"></i> Save Settings
        </button>
    </div>
</div>